{
    "name": "adapters-extension",
    "displayName": "atlas",
    "description": "Connects vscode with different server adapters",
    "version": "0.0.1",
    "publisher": "mohitsuman",
    "engines": {
        "vscode": "^1.23.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.sayHello",
        "onView:servers"
    ],
    "main": "./out/extension",
    "contributes": {
        "commands": [{
                "command": "servers.addLocation",
                "title": "Add Server Location ...",
                "icon": "resources/dark/add-location.svg"
            },
            {
                "command": "server.start",
                "title": "Start"
            },
            {
                "command": "server.stop",
                "title": "Stop"
            },
            {
                "command": "server.remove",
                "title": "Remove"
            },
            {
                "command": "server.output",
                "title": "Show Output"
            }
        ],
        "views": {
            "explorer": [{
                "id": "servers",
                "name": "Servers"
            }]
        },
        "menus": {
            "view/title": [{
                "command": "servers.addLocation",
                "when": "view == servers",
                "group": "navigation"
            }],
            "view/item/context": [{
                    "command": "server.start",
                    "when": "view == servers",
                    "group": "a@1"
                },
                {
                    "command": "server.stop",
                    "when": "view == servers",
                    "group": "a@2"
                },
                {
                    "command": "server.remove",
                    "when": "view == servers",
                    "group": "b"
                },
                {
                    "command": "server.output",
                    "when": "view == servers",
                    "group": "c"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.6",
        "tslint": "^5.8.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    },
    "dependencies": {
        "npm": "^6.0.1",
        "vscode-jsonrpc": "^3.6.2",
        "vscode-languageclient": "^4.1.4"
    }
}