{
  "name": "vscode-server-connector",
  "displayName": "Server Connector",
  "description": "Allows to start, stop and deploy to Red Hat server and runtime products like Wildfly, JBoss EAP (Enterprise Application Platform), Minishift, CDK (Container Development Kit).",
  "version": "0.23.2",
  "license": "SEE LICENSE IN LICENSE",
  "publisher": "redhat",
  "author": "Red Hat",
  "preview": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/redhat-developer/vscode-server-connector.git"
  },
  "bugs": "https://github.com/redhat-developer/vscode-server-connector/issues/",
  "engines": {
    "vscode": "^1.34.0"
  },
  "activationEvents": [
    "onView:servers"
  ],
  "categories": [
    "Other"
  ],
  "keywords": [
    "server",
    "runtimes",
    "middleware",
    "adapters",
    "red hat",
    "jboss",
    "wildfly",
    "minishift",
    "container development kit",
    "cdk",
    "enterprise application platform",
    "eap"
  ],
  "icon": "images/jboss.eap.png",
  "main": "./out/src/extension",
  "scripts": {
    "package": "node ./build/package.js",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/test-runner.js",
    "ui-test": "npm run compile && extest setup-and-run out/src/ui-test/allTestsSuite.js",
    "update-deps": "node_modules/.bin/ncu --upgrade --loglevel verbose --packageFile package.json && npm update",
    "coverage:upload": "codecov -f coverage/coverage-final.json",
    "build": "npm run compile && npm run package"
  },
  "extensionPack": [
    "redhat.vscode-rsp-ui"
  ],
  "extensionDependencies": [
    "redhat.vscode-rsp-ui"
  ],
  "devDependencies": {
    "@types/glob": "^7.1.3",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.12.50",
    "@types/sinon": "^7.5.2",
    "@types/vscode": "^1.34.0",
    "chai": "^4.2.0",
    "codecov": "^3.7.1",
    "decache": "^4.6.0",
    "decompress": "^4.2.1",
    "download": "^7.1.0",
    "glob": "^7.1.4",
    "istanbul": "^0.4.5",
    "mocha": "^6.2.3",
    "mocha-jenkins-reporter": "^0.4.3",
    "remap-istanbul": "^0.13.0",
    "sinon": "^7.3.2",
    "sinon-chai": "^3.5.0",
    "tslint": "^5.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.9.6",
    "vscode-extension-tester": "^3.1.0",
    "vscode-extension-tester-native": "^3.0.0",
    "vscode-test": "^1.4.0"
  },
  "dependencies": {
    "expand-home-dir": "0.0.3",
    "find-java-home": "^0.2.0",
    "fs-extra": "7.0.0",
    "path-exists": "^3.0.0",
    "portfinder": "^1.0.26",
    "tcp-port-used": "^1.0.1",
    "vscode-server-connector-api": "0.1.7",
    "wait-on": "^5.0.3"
  }
}
